<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/bt_frame_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frame_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bt_tween_animation"/>

    <Button
        android:id="@+id/bt_tween_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tween_animation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_frame_animation"
        app:layout_constraintBottom_toTopOf="@+id/bt_property_animation"/>

    <Button
        android:id="@+id/bt_property_animation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/property_animation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bt_tween_animation"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>